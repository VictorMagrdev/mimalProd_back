type Bodega {
    id: ID!
    codigo: String!
    nombre: String!
    descripcion: String
    tipoBodegaId: ID
    creadoEn: DateTime
    tipo: TipoBodega
}

input BodegaRequest {
    codigo: String!
    nombre: String!
    descripcion: String
    tipoBodegaId: ID
}
extend type Query {
    bodegas: [Bodega]
}

extend type Mutation {
    createBodega(input: BodegaRequest!): Bodega
    updateBodega(id: ID!, input: BodegaRequest!): Bodega
    deleteBodega(id: ID!): Boolean
}