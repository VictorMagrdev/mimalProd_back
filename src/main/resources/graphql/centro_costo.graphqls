type CentroCosto {
    id: ID!
    codigo: String!
    nombre: String!
}

input CentroCostoRequest {
    codigo: String!
    nombre: String!
}

extend type Query {
    centrosCosto: [CentroCosto]
}

extend type Mutation {
    createCentroCosto(input: CentroCostoRequest!): CentroCosto
    updateCentroCosto(id: ID!, input: CentroCostoRequest!): CentroCosto
    deleteCentroCosto(id: ID!): Boolean
}