type OrdenEvento {
    id: ID!
    ordenId: ID
    evento: String!
    descripcion: String
    fecha: DateTime
}

input OrdenEventoRequest {
    ordenId: ID
    evento: String!
    descripcion: String
    fecha: DateTime
}

extend type Query {
    ordenesEvento: [OrdenEvento]
}

extend type Mutation {
    createOrdenEvento(input: OrdenEventoRequest!): OrdenEvento
    updateOrdenEvento(id: ID!, input: OrdenEventoRequest!): OrdenEvento
    deleteOrdenEvento(id: ID!): Boolean
}