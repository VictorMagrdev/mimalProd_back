type ParametroPlanificacion {
    id: ID!
    productoId: ID!
    productoCodigo: String!
    productoNombre: String!
    leadTimeDias: Int!
    loteMinimo: Float!
    loteEconomico: Float!
    politicaInventario: String!
    actualizadoEn: String!
}

input ParametroPlanificacionRequest {
    productoId: ID!
    leadTimeDias: Int
    loteMinimo: Float
    loteEconomico: Float
    politicaInventario: String
}

extend type Query {
    parametrosClasificacion: [ParametroPlanificacion!]!
    parametroPlanificacion(id: ID!): ParametroPlanificacion
    parametroByProductoId(productoId: ID!): ParametroPlanificacion
}

extend type Mutation {
    createParametroPlanificacion(input: ParametroPlanificacionRequest!): ParametroPlanificacion!
    updateParametroPlanificacion(id: ID!, input: ParametroPlanificacionRequest!): ParametroPlanificacion!
    deleteParametroPlanificacion(id: ID!): Boolean!
}