type TipoCosto {
    id: ID!
    codigo: String!
    nombre: String!
    descripcion: String
    activo: Boolean
    creadoEn: DateTime
}

input TipoCostoRequest {
    codigo: String!
    nombre: String!
    descripcion: String
    activo: Boolean
}
extend type Query {
    tiposCosto: [TipoCosto]
}

extend type Mutation{
    createTipoCosto(input: TipoCostoRequest!): TipoCosto
    updateTipoCosto(id: ID!, input: TipoCostoRequest!): TipoCosto
    deleteTipoCosto(id: ID!): Boolean
}